<?xml version="1.0" encoding="UTF-8"?>
<phpunit bootstrap="tests/src/bootstrap.php"
         backupGlobals="false"
         backupStaticAttributes="false"
         strict="true"
         verbose="true">

    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">tests/src/PhproTest/EncodingCom/</directory>
        </testsuite>
    </testsuites>

    <filter>
        <whitelist addUncoveredFilesFromWhitelist="true">
            <directory suffix=".php">src</directory>
            <exclude>
                <file>tests/src/bootstrap.php</file>
            </exclude>
        </whitelist>
    </filter>
</phpunit>